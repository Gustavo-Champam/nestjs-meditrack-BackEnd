$example = @"
QUEUE_ENABLED=false

# App
PORT=3001
NODE_ENV=production
TZ=America/Sao_Paulo

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority&appName=<app>

# JWT
JWT_SECRET=<long-random-secret>
JWT_EXPIRES=7d

# Redis (Upstash TCP/TLS)
REDIS_URL=rediss://default:<password>@<host>:<port>
# Fallback local (ignorado se REDIS_URL estiver definido)
REDIS_HOST=localhost
REDIS_PORT=6379

# Firebase (opcional)
FIREBASE_SERVICE_ACCOUNT_JSON=
FIREBASE_DB_URL=
"@
Set-Content .env.example $example
